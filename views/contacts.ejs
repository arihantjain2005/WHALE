<%- include('partials/header') %>

<h1>Contact Groups</h1>

<div class="content-grid">
    <div class="card">
        <h2>Upload New Group</h2>
        <p>Upload a CSV or Excel file. The file name will be used as the group name.</p>
        <form action="/api/contacts/upload" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="contact-file">Select File (CSV, XLSX, XLS):</label>
                <input type="file" id="contact-file" name="contactFile" required>
            </div>
            <button type="submit">Upload and Save Group</button>
        </form>
    </div>

    <div class="card">
        <h2>Saved Groups</h2>
        <div id="contact-group-list">
            <p>Loading groups...</p>
        </div>
    </div>
</div>

<div class="card full-width hidden" id="contact-view-card">
    <div id="contact-view-header">
        <h2 id="contact-view-title"></h2>
        <div class="contact-view-actions">
            <input type="text" id="contact-search-bar" placeholder="Search by number or name...">
            <button id="save-contacts-btn" class="hidden">Save Changes</button>
        </div>
    </div>
    <div id="contact-table-container">
        <table id="contact-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Number</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<%- include('partials/footer') %>
